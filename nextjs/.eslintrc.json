{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@next/next/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "@next/next/no-img-element": "off"
      }
    }
  ],
  "ignorePatterns": [".next/**", "**/*.config.js", "**/.cache/**"]
}
